<%= render 'shared/errors', obj: @post %>

	<div class="card bg-light mb-3">
    	<div class="card-body">
    		<div class="form">
	    		<%= form_for @post do |f| %>
	    		<div class="form-group row">
	    			<%= f.label :title %>
	    			<%= f.text_field :title, class: 'form_control'%>
	    		</div>
	    		<div class="form-group row">
	    			<%= f.label :url %>
	    			<%= f.text_field :url, class: 'form_control' %>
	    		</div>
	    		<div class="form-group row">
	    			<%= f.label :description %>
	    			<%= f.text_area :description, rows: 5, class: 'form_control' %>
	    		</div>

				<div class='form-group'>
					<%= f.label "Categories" %>
					<%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
					<% cb.label(class: "checkbox inline") {cb.check_box(class: "checkbox") + cb.text} %>
					<% end %>
				</div>

	    		<%= f.submit(@post.new_record? ? 'Crear Entrada': 'Editar', class: 'btn btn-primary') %>
	    		<% end %>
    		</div> <!-- fin class form -->
    	</div>
    </div>
