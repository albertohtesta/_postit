<div class='row'>

	<div class='col-sm-0'>
		<div class="card bg-light mb-3">
			<div class="card-body">
				<%= link_to vote_post_path(post, vote: true), method: 'post' do %>
					<i class='fa fa-arrow-up'></i>
				<% end %>
				<br/>
				<%= post.total_votes %>
				<br/>
				<%= link_to vote_post_path(post, vote: false), method: 'post' do %>
					<i class='fa fa-arrow-down'></i>
				<% end %>
			</div>
		</div>
	</div>

	<div class='col-sm-8'>
			<div class="card bg-light mb-3">
				<div class="card-body">
					<%= render post.categories %>
					<h4><%= link_to post.title, fix_url(post.url) %></h4>
					<p><%= post.description %></p>
					<p>
						<span class="quiet">por:</span><%= link_to post.creator.username, user_path(post.creator) %>
						<small>at <%= display_datetime(post.created_at) %></small>
					</p>
					<small>
						<span>
							<%= link_to("#{post.comments.size} comments", post_path(post)) %>
						</span>
					</small>
				</div>
			</div>
	</div>		
</div>			
